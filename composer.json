{
    "name": "digitalcorehub/laravel-api-docx",
    "description": "AI-powered automatic API documentation generator for Laravel. Write code. Laravel API Docx writes the docs.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "api",
        "documentation",
        "openai",
        "ai",
        "markdown",
        "openapi",
        "swagger"
    ],
    "authors": [
        {
            "name": "Digital Core Hub",
            "email": "info@digitalcorehub.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^12.0",
        "illuminate/console": "^12.0",
        "illuminate/filesystem": "^12.0",
        "illuminate/routing": "^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0 || ^12.0",
        "orchestra/testbench": "^9.0 || ^10.0",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.0",
        "php-cs-fixer/shim": "^3.0",
        "phpstan/phpstan": "^1.0 || ^2.0"
    },
    "autoload": {
        "psr-4": {
            "DigitalCoreHub\\LaravelApiDocx\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DigitalCoreHub\\LaravelApiDocx\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DigitalCoreHub\\LaravelApiDocx\\LaravelApiDocxServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover coverage/coverage.xml --coverage-html coverage",
        "check-style": "php-cs-fixer fix --dry-run --diff",
        "fix-style": "php-cs-fixer fix",
        "pint": "pint",
        "pint-test": "pint --test",
        "analyse": "phpstan analyse",
        "security-audit": "composer audit",
        "format": [
            "@pint",
            "@fix-style"
        ],
        "quality": [
            "@pint-test",
            "@analyse",
            "@test"
        ]
    }
}
